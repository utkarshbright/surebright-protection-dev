<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Integration:etc/integration/api.xsd">
    <integration>
        <name>SureBright Product Protection</name>
        <email>support@surebright.com</email>
        <endpoint_url>http://34.70.144.229/site-platform/api/platform/magento/oauth/initialize</endpoint_url>
        <identity_link_url>https://merchant.surebright.com/store/login</identity_link_url>
        <resources>
            <!-- Backend Access -->
            <resource name="Magento_Backend::admin"/>
            <resource name="Magento_Backend::system"/>
            <resource name="Magento_Backend::stores"/>
            <resource name="Magento_Backend::store"/>
 
            <!-- Sales Access -->
            <resource name="Magento_Sales::sales"/>
            <resource name="Magento_Sales::sales_operation"/>
            <resource name="Magento_Sales::sales_creditmemo"/>
            <resource name="Magento_Sales::actions_view"/>
            <resource name="Magento_Sales::shipment"/>
 
            <!-- Catalog Access -->
            <resource name="Magento_Catalog::catalog"/>
            <resource name="Magento_Catalog::products"/>
            <resource name="Magento_Catalog::categories"/>
 
            <!-- Cart and Quote Access -->
            <resource name="Magento_Quote::quote"/>
            <resource name="Magento_Quote::manage"/>
 
            <!-- Customer Information -->
            <resource name="Magento_Customer::customer"/>
            <resource name="Magento_Customer::manage"/>
            <resource name="Magento_Customer::online"/>
            <resource name="Magento_Customer::group"/>

            <!-- Custom Api -->
            <resource name="Surebright_Integration::manage"/>
        </resources>
    </integration>
</config>
